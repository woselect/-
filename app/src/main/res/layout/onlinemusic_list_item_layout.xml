<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/online_albumImage"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/c" />

    <ImageView
        android:id="@+id/online_music_xiazai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20.0dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_xiazai"
         />
    <TextView
        android:id="@+id/online_music_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/online_albumImage"
        android:focusable="true"
        android:text="@string/siger"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/online_music_Artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/online_music_title"
        android:layout_marginTop="5.0dip"
        android:layout_below="@id/online_music_title"
        android:textColor="@android:color/white"
        android:text="@string/artist" />

</RelativeLayout>

